# Ensure that Apache listens on port 80
#Listen 80

# Listen for virtual host requests on all IP addresses
NameVirtualHost *:80

<VirtualHost *:80>
DocumentRoot /var/www/html/packages
ServerName packages.*
ServerAlias packages

# Rules
<Directory /var/www/html/packages>
    Options Indexes FollowSymLinks
    AllowOverride None
    Order allow,deny
    allow from all
</Directory>

<Directory /var/www/html/syco-files>
    Options Indexes FollowSymLinks
    AllowOverride None
    Order allow,deny
    allow from all
</Directory>



#Logs
ErrorLog /var/log/httpd/packages.fareoffice.com_error.log
LogLevel warn
CustomLog /var/log/httpd/packages.fareoffice.com_access.log combined



</VirtualHost>