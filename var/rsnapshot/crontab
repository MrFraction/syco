SHELL=/bin/bash
PATH=/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root
HOME=/

# Hourly backup
00  *   * * *   root    rsnapshot hourly

# Dayliy
30 1    * * *   root    rsnapshot daily

# Weekly
00 2    * * 7   root    rsnapshot weekly

# Monthly
00 3    1 * *   root    rsnapshot monthly
00 4    1 * *   root    syco tar-backup